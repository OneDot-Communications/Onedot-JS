{
  "name": "@onedot/desktop",
  "version": "1.0.0",
  "description": "Desktop application support for ONEDOT-JS framework",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@onedot/core": "^1.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "typescript": "^5.0.0",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.0",
    "rimraf": "^4.4.0",
    "eslint": "^8.39.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0"
  },
  "author": "ONEDOT-JS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onedot-js/onedot-js.git",
    "directory": "packages/desktop"
  },
  "keywords": [
    "onedot-js",
    "desktop",
    "electron",
    "cross-platform",
    "native"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.onedot.app",
    "productName": "ONEDOT App",
    "directories": {
      "output": "dist-desktop"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  }
}
