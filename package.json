{
  "name": "onedot-js",
  "version": "1.1.0",
  "description": "The Ultimate Independent Full-Stack Framework - Complete Production-Ready Solution with Template System",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "npm run build:packages && npm run build:native && npm run build:bundler",
    "build:packages": "npm run build -w @onedot/core -w @onedot/runtime -w @onedot/cli -w @onedot/plugins -w @onedot/style -w @onedot/profiler -w @onedot/docs -w @onedot/tester -w @onedot/security -w @onedot/aot",
    "build:native": "npm run build:native -w @onedot/native",
    "build:bundler": "cargo build --release --manifest-path packages/bundler/Cargo.toml",
    "build:ts": "tsc -b packages/core packages/runtime packages/cli packages/plugins packages/style packages/profiler packages/docs packages/tester packages/security packages/aot packages/native",
    "dev": "node packages/cli/dist/index.js dev",
    "create": "node packages/cli/dist/index.js create",
    "test": "npm run test -w @onedot/tester",
    "test:all": "npm run test:core && npm run test:runtime && npm run test:bundler && npm run test:integration",
    "test:core": "npm run test -w @onedot/core",
    "test:runtime": "npm run test -w @onedot/runtime", 
    "test:bundler": "npm run test -w @onedot/bundler",
    "test:integration": "npm run test:integration -w @onedot/cli",
    "benchmark": "npm run benchmark -w @onedot/tester",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "clean": "npm run clean --workspaces --if-present && cargo clean --manifest-path packages/bundler/Cargo.toml",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "docs": "npm run generate -w @onedot/docs",
    "docs:serve": "npm run serve -w @onedot/docs",
    "setup": "npm install && npm run build:bundler && npm run build",
    "prepack-disabled": "npm run build",
    "prepublishOnly-disabled": "npm run test:all && npm run lint",
    "postinstall": "husky install || exit 0",
    "create:app": "npm run create -w @onedot/cli",
    "diagnosis": "npm run diagnose -w @onedot/cli",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "npm run security:scan -w @onedot/security",
    "coverage": "npm run coverage -w @onedot/tester",
    "performance": "npm run performance -w @onedot/profiler"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onedot-js/onedot.git"
  },
  "keywords": [
    "framework", "full-stack", "typescript", "react", "angular", "vue", "nextjs", 
    "flutter", "electron", "react-native", "independent", "zero-dependencies",
    "multi-platform", "ssr", "ssg", "spa", "pwa", "mobile", "desktop", "web",
    "bundler", "compiler", "runtime", "performance", "optimization", "tree-shaking",
    "code-splitting", "hmr", "development", "production", "deployment",
    "skia", "gpu", "native", "jsi", "fabric", "hermes", "aot", "bytecode"
  ],
  "author": "ONEDOT Team <team@onedot.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onedot-js/onedot/issues"
  },
  "homepage": "https://onedot.dev",
  "engines": {"node": ">=18.18.0", "npm": ">=9.0.0"},
  "devDependencies": {
    "typescript": "5.4.5",
    "@types/node": "20.11.30",
    "@typescript-eslint/parser": "7.8.0",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "eslint": "8.57.0",
    "ws": "8.17.0",
    "chokidar": "3.6.0",
    "semantic-release": "^21.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^10.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "rimraf": "^5.0.0"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
