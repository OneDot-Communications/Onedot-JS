{
  "name": "onedot-js",
  "version": "1.0.0",
  "description": "A full-stack, multi-platform framework for building applications for web, mobile, and desktop",
  "main": "index.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "start:playground": "lerna run start --scope=playground",
    "release": "node scripts/release.js",
    "update:packages": "node scripts/update-packages.js"
  },
  "keywords": [
    "framework",
    "multi-platform",
    "javascript",
    "typescript",
    "web",
    "mobile",
    "desktop"
  ],
  "author": "ONEDOT-JS Team",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lerna": "^6.6.2",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
